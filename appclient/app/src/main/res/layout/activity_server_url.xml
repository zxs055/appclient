<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/theme_background_grey"
    android:orientation="vertical">

    <com.heke.rihappclient.view.TitleView
        android:id="@+id/reset_pwd_titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

     <!--   <com.heke.rihappclient.view.IcomoonTextView
            android:tag="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="26dp"
            android:textColor="@color/white1"
            android:text="@string/icon_text_ok"
            android:id="@+id/reset_pwd_title_commit"/>-->

    </com.heke.rihappclient.view.TitleView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="12.0dip"
                android:paddingTop="12.0dip">

                <TextView
                    android:layout_width="80.0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="服务器地址"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/serverTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:ellipsize="start"
                    android:hint="请输入服务器地址"
                    android:paddingLeft="20.0dip"
                    android:singleLine="true"
                    android:textColorHint="#ff999999"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_mid"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="12.0dip"
                android:paddingTop="12.0dip"
                android:visibility="gone">

                <TextView
                    android:layout_width="80.0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="手机号"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:ellipsize="start"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:paddingLeft="20.0dip"
                    android:singleLine="true"
                    android:editable="false"
                    android:textColorHint="#ff999999"
                    android:textSize="16.0sp" />
            </LinearLayout>
            <Button
                android:id="@+id/ok"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="32.0dip"
                android:background="@drawable/button_border_radius"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="16.0sp" />
            <TextView
                android:id="@+id/tv_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_weight="1.0"
                android:text="检测更新"
                android:textColor="#ff333333"
                android:textSize="16.0sp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="20.0dip"
                android:paddingLeft="5.0dip"
                android:paddingTop="10.0dip"
                android:text="注：请确认输入的手机号码信息，确保工作人员可以联系到你。"
                android:textColor="@color/grey_deep"
                android:textSize="14.0sp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>