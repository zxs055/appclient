<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/hkcomm_progress_bg">

        <com.example.nanchen.aiyaschoolpush.ui.view.ProgressWheel
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:id="@+id/progress_wheel"
            android:layout_marginLeft="10dp"
            app:matProg_barColor="@android:color/white"
            app:matProg_progressIndeterminate="true"
            app:matProg_rimColor="#949494"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_loading_text"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/progress_wheel"
            android:text="@string/view_loading_text"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </RelativeLayout>
</RelativeLayout>