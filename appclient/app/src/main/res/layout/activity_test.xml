<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/theme_background_grey"
    android:orientation="vertical">

    <com.heke.rihappclient.view.TitleView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.heke.rihappclient.view.TitleView>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/app_click_white_grey"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_weight="1.0"
            android:text="门店盘点"
            android:textColor="#ff333333"
            android:textSize="16.0sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip"
            android:src="@mipmap/advance_gray_btn" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/grey_mid" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="12.0dip"
        android:paddingTop="12.0dip">

        <EditText
            android:id="@+id/pandiancount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:layout_weight="1.0"
            android:background="@null"
            android:ellipsize="start"
            android:hint="请输入数据条数"
            android:inputType="number"
            android:paddingLeft="20.0dip"
            android:singleLine="true"
            android:editable="false"
            android:textColorHint="#ff999999"
            android:textSize="16.0sp" />
        <TextView
            android:id="@+id/pandianbtn"
        android:layout_width="80.0dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="测试"
        android:textSize="16.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/app_click_white_grey"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_weight="1.0"
            android:text="门店销售"
            android:textColor="#ff333333"
            android:textSize="16.0sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip"
            android:src="@mipmap/advance_gray_btn" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/grey_mid" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="12.0dip"
        android:paddingTop="12.0dip">

        <EditText
            android:id="@+id/xiaoshoucount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:layout_weight="1.0"
            android:background="@null"
            android:ellipsize="start"
            android:hint="请输入数据条数"
            android:inputType="number"
            android:paddingLeft="20.0dip"
            android:singleLine="true"
            android:editable="false"
            android:textColorHint="#ff999999"
            android:textSize="16.0sp" />
        <TextView
            android:id="@+id/xiaoshoubtn"
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="测试"
            android:textSize="16.0sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/app_click_white_grey"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_weight="1.0"
            android:text="门店采购"
            android:textColor="#ff333333"
            android:textSize="16.0sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip"
            android:src="@mipmap/advance_gray_btn" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/grey_mid" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="12.0dip"
        android:paddingTop="12.0dip">

        <EditText
            android:id="@+id/caigoucount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:layout_weight="1.0"
            android:background="@null"
            android:ellipsize="start"
            android:hint="请输入数据条数"
            android:inputType="number"
            android:paddingLeft="20.0dip"
            android:singleLine="true"
            android:editable="false"
            android:textColorHint="#ff999999"
            android:textSize="16.0sp" />
        <TextView
            android:id="@+id/caigoubtn"
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="测试"
            android:textSize="16.0sp" />
    </LinearLayout>
</LinearLayout>
